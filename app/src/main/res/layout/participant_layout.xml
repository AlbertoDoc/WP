<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/person_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_person_36"
        android:layout_margin="15dp"
        android:contentDescription="@string/add_participant"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/secondary_color" />

    <TextView
        android:id="@+id/person_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participant_name"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/text"

        app:layout_constraintLeft_toRightOf="@id/person_image_view"
        app:layout_constraintTop_toTopOf="@id/person_image_view"
        app:layout_constraintBottom_toBottomOf="@id/person_image_view"/>
</androidx.constraintlayout.widget.ConstraintLayout>